<div class="page-header">
  <h1><%= @book.name.titleize %></h1>
</div>

<dl class="dl-horizontal">  
  <dt><strong> Author:</strong></dt>
  <dd><%= @book.user.username %></dd>
  <dt><strong>Category:</strong></dt>
  <dd><%= @book.category.name %></dd>
  <dt><strong>Description:</strong></dt>
  <dd><%= @book.description %></dd>
  <dt><strong>Tags:</strong></dt>
  <dd><%= raw @book.tag_list.map { |t| link_to t, books_path(:tag => t) }.join(', ') %></dd>
  <dt><strong>Chapters:</strong></dt>
  <dd><%= render 'chapters/list_of_chapters' %></dd>
</dl>

<div class="row">
  <div class="col-md-2">
  </div>
  <div class="col-md-8">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                    books_path, :class => 'btn btn-default'  %>
  </div>
  <div class="col-md-2">   
      <%= link_to 'Read book', book_chapter_path(@book, 1), :class => 'btn btn-default' %> 
  </div>
</div>
