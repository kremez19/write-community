<%- model_class = Book -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<%= paginate @books %>

<div class="row">
	<div class='col-md-9'>
		<%= render 'books_for_index' %>
	</div>
	<div class='col-md-3'>
		<div class='well well-sm'>
			<h4>Categories</h4>
			<%= render 'categories' %>
			<%= link_to 'Show all books', books_path, :class => 'btn btn-link btn-sm' %>
		</div>
		<div class='well well-sm'>
			<h4>Tags</h4>
			<div id="tag_cloud">
  				<% tag_cloud Book.tag_counts, %w{s m l} do |tag, css_class| %>
    				<%= link_to tag.name, books_path(:tag => tag.name), class: css_class %>
  				<% end %>
			</div>
		</div>
	</div>
</div>

