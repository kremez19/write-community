<div>
	<h2>Profile:</h2>
	<p>
		<b>Username: </b> <%= current_user.username %>
	</p>
	<p>
		<b>E-mail: </b> <%= current_user.email %>
	</p>
	<div class="btn-group">
    	<%= link_to 'Edit profile information', edit_user_registration_path, :class => 'btn btn-default btn-xs' %>                 
    	<%= link_to 'Create new book', new_book_path, :class => 'btn btn-info btn-xs' %>
    </div>
	<h3>Your books:</h3>
	<%= paginate @books %>
	<%= render 'books/books_for_index' %>
</div> 